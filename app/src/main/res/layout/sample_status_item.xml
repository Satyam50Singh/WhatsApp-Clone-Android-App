<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:textAlignment="center">

    <com.example.whatsappclone.storyview.StoryView
        android:id="@+id/storyView_statuses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:spaceBetweenImageAndIndicator="1dp"
        app:storyImageRadius="8dp"
        app:storyItemIndicatorWidth="1dp"
        tools:ignore="MissingClass"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_status_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satyam Singh"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="22dp" />

        <TextView
            android:id="@+id/tv_status_last_updated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="22dp" />

    </LinearLayout>

</LinearLayout>
