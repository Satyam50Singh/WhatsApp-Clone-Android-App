<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.ChatFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/lightGrey"
        android:layoutAnimation="@anim/recycler_view_animation"
        android:visibility="gone"
        tools:listitem="@layout/user_list_layout" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_user_chat_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />

            <include layout="@layout/shimmer_chat_layout" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>