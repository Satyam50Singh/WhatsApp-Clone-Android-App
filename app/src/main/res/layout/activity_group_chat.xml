<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatbackground"
    android:orientation="vertical"
    tools:context=".ui.activities.GroupChatActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_gc"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_back_arrow_gc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back"
                tools:layout_editor_absoluteX="66dp" />

            <TextView
                android:id="@+id/tv_receiver_name_gc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Group Chat "
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="247dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_more_vert"
                tools:layout_editor_absoluteX="371dp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_user_chat_gc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_layout_gc"
        android:layout_below="@+id/toolbar_gc" />

    <LinearLayout
        android:id="@+id/linear_layout_gc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_message_gc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_sent_message_edit_text"
            android:drawableLeft="@drawable/ic_emoji_emotions"
            android:drawableRight="@drawable/ic_camera"
            android:drawablePadding="2dp"
            android:drawableTint="@color/darkGray"
            android:ems="10"
            android:hint="@string/message"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/ll_send_btn_gc"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_sent_btn"
            android:gravity="center_horizontal|center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_send" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>