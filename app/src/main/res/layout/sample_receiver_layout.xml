<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/bg_receiver_bubble"
    android:maxWidth="310dp"
    android:maxHeight="450dp"
    android:minHeight="30dp">

    <ImageView
        android:id="@+id/iv_receiver_image"
        android:layout_width="269dp"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/man"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_receiver_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_receiver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="32dp"
        android:inputType="textLongMessage|textMultiLine|textNoSuggestions"
        android:maxWidth="270dp"
        android:maxHeight="450dp"
        android:minWidth="50dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_receiver_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:inputType="textNoSuggestions|time"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="12dp" />

    <ImageView
        android:id="@+id/iv_receiver_reaction"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_fb_love"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/iv_receiver_image"
        app:layout_constraintEnd_toEndOf="@+id/tv_receiver_time"
        app:layout_constraintTop_toBottomOf="@+id/iv_receiver_image"
        app:layout_constraintVertical_bias="0.133" />
</androidx.constraintlayout.widget.ConstraintLayout>