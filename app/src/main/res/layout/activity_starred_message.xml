<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.StarredMessageActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_starred_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/recycler_view_animation"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/starred_message_layout" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_starred_message_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

            <include layout="@layout/shimmer_starred_messages_layout" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>